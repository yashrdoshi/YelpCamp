<%- include('../partials/header.ejs')  %> 
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">YelpCamp</p>        
            <div class="list-group">
                <li class="list-group-item active" style="font-weight: 900;"><%= campground.name %> </li>
                <li class="list-group-item">Description</li>
                <li class="list-group-item">Comments</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="thumbnail">
                <img class="img-responsive" src="<%=  campground.image %>">
                <div class="caption-full">
                    <h4 class="pull-right">Rs <%= campground.price %>/Day</h4>
                    <h4><a><h1><%= campground.name  %></h1></a></h4>
                    <p><%= campground.description %></p>
                    <p>
                        Submited by <em><%= campground.author.username %></em> 
                    </p>
                    <%if(currentUser != null && campground.author.id.equals(currentUser._id)){ %>  
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/edit">Edit</a>
                        <form class="delete-form" method="POST" action="/campgrounds/<%= campground._id%>?_method=DELETE">
                            <button class="btn btn-danger">Delete</button>
                        </form>
                    <%} %>                     
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                    <a class="btn btn-success" href="/campgrounds/<%= campground._id%>/comments/new">Add New Comment</a>
                </div>
                <hr>
                <%campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong><%= comment.author.username%></strong>
                            <span class="pull-right">1 Day ago</span>
                            <p><%= comment.text%></p>
                            <%if(currentUser != null && comment.author.id.equals(currentUser._id)){ %>  
                                <a class="btn btn-xs btn-warning" 
                                href="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>/edit">
                                Edit
                                </a>
                                <form class="delete-form" method="POST" action="/campgrounds/<%=campground._id%>/comments/<%= comment._id%>?_method=DELETE">
                                    <button class="btn btn-xs btn-danger">Delete</button>
                                </form>
                            <%} %>                     
                        </div>
                    </div>
                <hr>   
                <%}); %>
            </div>
        </div>
    </div>
</div>






