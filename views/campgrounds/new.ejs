<%- include('../partials/header.ejs')  %> 
<div class="container">
    <h1 style="text-align: center;">Create a new Campground</h1>
    <div style="width: 30%; margin: 20px auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder="Name">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder="Price Per Day" min="0" step="10">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder="Image">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder="Description">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary">Submit</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>

<%- include('../partials/footer.ejs')  %> 